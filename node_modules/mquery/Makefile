
test:
	@NODE_ENV=test ./node_modules/.bin/mocha $(T) $(TESTS)

test-cov:
	@NODE_ENV=test node \
		node_modules/.bin/istanbul cover \
		./node_modules/.bin/_mocha \
		-- -u exports \

open-cov:
	open coverage/lcov-report/index.html

